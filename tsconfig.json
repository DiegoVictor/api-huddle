{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@application/*": ["application/*"],
      "@config/*": ["config/*"],
      "@entities/*": ["entities/*"],
      "@frameworks/*": ["frameworks/*"],
      "@handlers/*": ["handlers/*"],
      "@handlers": ["handlers"],
      "@lib/*": ["lib/*"]
    }
  },
  "include": ["src", "tests"]
}
